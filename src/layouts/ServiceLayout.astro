---
import BaseLayout from './BaseLayout.astro';
import Hero from '../components/Hero.astro';

export interface Props {
  title: string;
  description: string;
  service: string;
  benefits: string[];
  process: { step: string; description: string }[];
}

const { title, description, service, benefits, process } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Hero 
    title={service}
    subtitle="Professional Service in Treasure Valley"
  />
  
  <section class="py-16 px-4 md:px-6 lg:px-8 max-w-7xl mx-auto">
    <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Expert {service} Services
        </h2>
        <p class="text-lg text-gray-700 mb-6">
          <slot name="intro" />
        </p>
        <div class="space-y-2 mb-8">
          <p class="text-lg font-semibold text-gray-900">Key Benefits:</p>
          <ul class="space-y-2">
            {benefits.map((benefit) => (
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-600 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        <a href="tel:+12089898378" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors">
          Get Free Quote: (208) 989-8378
        </a>
      </div>
      <div class="bg-green-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Our Process</h3>
        <div class="space-y-4">
          {process.map((step, index) => (
            <div class="flex items-start">
              <div class="bg-green-600 text-white rounded-full w-8 h-8 flex items-center justify-center flex-shrink-0 mr-3">
                {index + 1}
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">{step.step}</h4>
                <p class="text-gray-700 text-sm">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <slot />

    <!-- CTA Section -->
    <div class="bg-gray-900 rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Get Started?
      </h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Contact Lawns All Day today for professional {service.toLowerCase()} services 
        in the Treasure Valley. Free estimates available!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+12089898378" class="inline-flex items-center justify-center px-8 py-4 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call (208) 989-8378
        </a>
        <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 bg-white text-gray-900 font-semibold rounded-lg hover:bg-gray-100 transition-colors">
          Request Quote Online
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
