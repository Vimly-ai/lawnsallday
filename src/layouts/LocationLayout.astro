---
import BaseLayout from './BaseLayout.astro';
import Hero from '../components/Hero.astro';

export interface Props {
  title: string;
  description: string;
  city: string;
  population?: string;
  established?: string;
}

const { title, description, city, population, established } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Hero 
    title={`Lawn Care in ${city}`}
    subtitle="Professional Lawn Services for Your Community"
  />
  
  <section class="py-16 px-4 md:px-6 lg:px-8 max-w-7xl mx-auto">
    <div class="grid md:grid-cols-2 gap-12 mb-16">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Serving {city} with Pride
        </h2>
        <slot name="intro" />
        
        {(population || established) && (
          <div class="bg-gray-50 rounded-lg p-6 my-6">
            <h3 class="font-semibold text-gray-900 mb-3">About {city}</h3>
            {population && <p class="text-gray-700">Population: {population}</p>}
            {established && <p class="text-gray-700">Established: {established}</p>}
          </div>
        )}
        
        <p class="text-lg text-gray-700 mb-6">
          At Lawns All Day, we understand the unique lawn care needs of {city} residents. 
          Our local expertise ensures your lawn gets the right treatment at the right time.
        </p>
        
        <a href="tel:+12089898378" class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors">
          Call Us: (208) 989-8378
        </a>
      </div>
      
      <div class="space-y-6">
        <div class="bg-white rounded-xl shadow-lg p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Services in {city}</h3>
          <ul class="space-y-3">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <a href="/lawn-mowing" class="text-gray-700 hover:text-green-600">Lawn Mowing</a>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <a href="/landscaping" class="text-gray-700 hover:text-green-600">Landscaping</a>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <a href="/tree-trimming" class="text-gray-700 hover:text-green-600">Tree Trimming</a>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <a href="/sprinkler-repair" class="text-gray-700 hover:text-green-600">Sprinkler Repair</a>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <a href="/fertilization" class="text-gray-700 hover:text-green-600">Fertilization</a>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <a href="/weed-control" class="text-gray-700 hover:text-green-600">Weed Control</a>
            </li>
          </ul>
        </div>
        
        <div class="bg-green-50 rounded-xl p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Why Choose Us?</h3>
          <ul class="space-y-2">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-600 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">Local expertise in {city}</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-600 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">Licensed and insured</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-600 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">Free estimates</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-600 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">Satisfaction guaranteed</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <slot />

    <!-- Service Areas -->
    <div class="bg-gray-50 rounded-2xl p-8 mb-16">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">Also Serving Nearby Communities</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/boise" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Boise</span>
        </a>
        <a href="/meridian" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Meridian</span>
        </a>
        <a href="/eagle" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Eagle</span>
        </a>
        <a href="/nampa" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Nampa</span>
        </a>
        <a href="/caldwell" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Caldwell</span>
        </a>
        <a href="/star" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Star</span>
        </a>
        <a href="/middleton" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Middleton</span>
        </a>
        <a href="/kuna" class="text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow">
          <span class="font-medium text-gray-700 hover:text-green-600">Kuna</span>
        </a>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-gray-900 rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Get Your Free Lawn Care Quote in {city}
      </h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Join your neighbors in {city} who trust Lawns All Day for professional lawn care services.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+12089898378" class="inline-flex items-center justify-center px-8 py-4 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call (208) 989-8378
        </a>
        <a href="mailto:info@lawnsallday.com" class="inline-flex items-center justify-center px-8 py-4 bg-white text-gray-900 font-semibold rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Email Us
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
