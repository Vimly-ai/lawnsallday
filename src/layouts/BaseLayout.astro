---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  keywords?: string;
  image?: string;
  canonical?: string;
  schema?: any;
}

const { title, description, keywords, image, canonical, schema } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO 
      title={title}
      description={description}
      keywords={keywords}
      image={image}
      canonical={canonical}
      schema={schema}
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>