---
import SEO from '../../components/SEO.astro';
import Hero from '../../components/Hero.astro';
import Services from '../../components/Services.astro';
import CTA from '../../components/CTA.astro';
import Locations from '../../components/Locations.astro';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Fertilization & Weed Control',
  description: 'Professional lawn fertilization and weed control services in the Treasure Valley',
  provider: {
    '@type': 'LocalBusiness',
    name: 'Lawns All Day',
    address: {
      '@type': 'PostalAddress',
      addressRegion: 'ID',
      addressLocality: 'Nampa'
    }
  }
};
---

<SEO
  title="Fertilization & Weed Control Services | Lawns All Day"
  description="Professional lawn fertilization and weed control services in Nampa, Meridian, Boise, and surrounding areas. Keep your lawn healthy and weed-free all year round."
  keywords="lawn fertilization, weed control, lawn care services, organic lawn care"
  schema={schema}
/>

<Hero
  title="Healthy, Weed-Free Lawns"
  description="Professional fertilization and weed control services to keep your lawn lush and vibrant"
/>

<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-foreground mb-8">Our Fertilization & Weed Control Services</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold text-foreground mb-4">Custom Fertilization Programs</h3>
          <p class="text-muted-foreground">
            Tailored fertilizer applications based on soil type and seasonal needs
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-foreground mb-4">Organic Weed Control</h3>
          <p class="text-muted-foreground">
            Safe, effective weed control solutions that protect your family and pets
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-foreground mb-4">Seasonal Treatments</h3>
          <p class="text-muted-foreground">
            Timely applications to prevent weed growth and promote healthy grass
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<Services />

<Locations />

<CTA />
