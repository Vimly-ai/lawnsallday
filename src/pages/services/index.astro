---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Services from '../../components/Services.astro';
import CTA from '../../components/CTA.astro';
---

<BaseLayout
  title="Lawn Care & Landscaping Services | Lawns All Day"
  description="Complete lawn care and landscaping services including mowing, fertilization, weed control, tree trimming, sprinkler repair, and more. Free quotes!"
>
  <section class="py-16 bg-lawn-green-50">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-center text-gray-900 mb-8">
        Professional Lawn Care Services
      </h1>
      <p class="text-xl text-center text-gray-700 max-w-3xl mx-auto mb-12">
        From routine maintenance to complete landscape transformations, we offer 
        comprehensive services to keep your property looking its best year-round.
      </p>
    </div>
  </section>
  
  <Services />
  <CTA />
</BaseLayout>