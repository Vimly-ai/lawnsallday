---
import Layout from '../../layouts/Layout.astro';
import LocationHero from '../../components/LocationHero.astro';
import ServiceGrid from '../../components/ServiceGrid.astro';

const locationData = {
  name: 'Eagle',
  zips: ['83616'],
  lat: '43.6954',
  lng: '-116.3548'
};

const services = [
  { name: 'Lawn Mowing & Edging', slug: 'eagle-idaho-lawn-mowing-and-edging', description: 'Premium weekly, bi-weekly, or monthly lawn mowing with precise edging.' },
  { name: 'Fertilization & Weed Control', slug: 'eagle-idaho-fertilization-and-weed-control', description: 'Premium lawn treatment programs for a lush, weed-free lawn.' },
  { name: 'Sprinkler Systems', slug: 'eagle-idaho-sprinkler-system-installation', description: 'Expert sprinkler installation, repair, and maintenance services.' },
  { name: 'Landscaping Services', slug: 'eagle-idaho-landscaping-services-near-me', description: 'Complete landscape design and installation services.' },
  { name: 'Tree & Bush Trimming', slug: 'eagle-idaho-tree-and-bush-trimming', description: 'Professional pruning and trimming for healthy plants.' },
  { name: 'Property Management', slug: 'eagle-idaho-ongoing-lawn-and-landscape-maintenance-for-rental-homes', description: 'Specialized services for luxury properties and HOAs.' }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Lawns All Day - Eagle, Idaho",
  "description": "Premium lawn care and landscaping services in Eagle, Idaho. Serving zip code 83616.",
  "url": "https://lawnsallday.com/locations/eagle-idaho",
  "telephone": "+12089898378",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Eagle",
    "addressRegion": "ID",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "43.6954",
    "longitude": "-116.3548"
  },
  "areaServed": {
    "@type": "City",
    "name": "Eagle, Idaho"
  }
};
---

<Layout
  title="Lawn Care Eagle Idaho | Premium Landscaping Services | Lawns All Day"
  description="Premium lawn care and landscaping company in Eagle, Idaho. Professional mowing, landscaping, sprinkler repair, tree trimming & more. Serving zip code 83616. Call (208) 989-8378!"
  schema={schema}
  canonical="https://lawnsallday.com/locations/eagle-idaho"
>
  <LocationHero 
    location="Eagle, Idaho"
    locationData={locationData}
  />

  <main class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- About Section -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Premium Lawn Care in Eagle, Idaho</h2>
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <p class="text-lg text-gray-600 mb-6">
              Lawns All Day provides premium lawn care and landscaping services to Eagle's luxury homes 
              and estates. We understand the high standards of Eagle residents and deliver exceptional 
              service that maintains your property's prestigious appearance.
            </p>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-900">Serving Eagle Zip Code</h3>
                  <p class="text-gray-600">83616</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-gray-900">Premium Service</h3>
                  <p class="text-gray-600">Luxury property specialists</p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <img 
              src="/images/locations/eagle-idaho.jpg"
              alt="Premium lawn care services in Eagle, Idaho"
              class="rounded-lg shadow-lg w-full h-auto"
              loading="lazy"
              width="600"
              height="400"
            />
          </div>
        </div>
      </section>

      <!-- Services Grid -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Our Premium Services in Eagle</h2>
        <ServiceGrid services={services} location="Eagle, Idaho" />
      </section>

      <!-- Trust Signals -->
      <section class="bg-gray-50 rounded-lg p-8 mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Why Eagle Trusts Lawns All Day</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Licensed & Insured</h3>
            <p class="text-gray-600">Fully licensed and insured for your protection</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Premium Service</h3>
            <p class="text-gray-600">Luxury property specialists</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">5-Star Service</h3>
            <p class="text-gray-600">Consistently rated 5 stars by our customers</p>
          </div>
        </div>
      </section>
    </div>
  </main>

  <!-- CTA Section -->
  <section class="bg-green-600 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">
        Ready for Premium Lawn Care in Eagle?
      </h2>
      <p class="text-xl text-green-100 mb-8">
        Join Eagle's most discerning homeowners. Get your free quote today!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="tel:+12089898378" 
          class="inline-flex items-center px-8 py-4 bg-white text-green-600 font-semibold rounded-lg hover:bg-green-50 transition-colors duration-300"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          Call (208) 989-8378
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center px-8 py-4 bg-green-700 text-white font-semibold rounded-lg hover:bg-green-800 transition-colors duration-300"
        >
          Get Free Quote
        </a>
      </div>
    </div>
  </section>
