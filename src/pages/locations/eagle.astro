---
import SEO from '../components/SEO.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import CTA from '../components/CTA.astro';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'Lawn\'s All Day - Eagle',
  address: {
    '@type': 'PostalAddress',
    addressRegion: 'ID',
    addressLocality: 'Eagle'
  },
  areaServed: {
    '@type': 'City',
    name: 'Eagle',
    address: {
      '@type': 'PostalAddress',
      addressRegion: 'ID'
    }
  }
};
---

<SEO
  title="Lawn Care Services in Eagle, ID | Lawn's All Day"
  description="Professional lawn care services in Eagle, ID. Serving the entire Treasure Valley with lawn mowing, fertilization, and landscaping services."
  keywords="lawn care services, eagle, idaho, lawn mowing, landscaping"
  schema={schema}
/>

<Hero
  title="Lawn Care Services in Eagle"
  description="Professional lawn care services for Eagle homeowners"
/>

<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-foreground mb-8">Why Choose Us for Your Eagle Lawn Care?</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold text-foreground mb-4">Local Expertise</h3>
          <p class="text-muted-foreground">
            Serving Eagle homeowners with personalized lawn care solutions
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-foreground mb-4">Complete Services</h3>
          <p class="text-muted-foreground">
            From mowing to fertilization to landscaping - we handle it all
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-foreground mb-4">Year-Round Care</h3>
          <p class="text-muted-foreground">
            Seasonal lawn care programs tailored to Eagle's climate
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<Services />

<CTA />
