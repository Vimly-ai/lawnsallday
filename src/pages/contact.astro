---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Contact from '../components/ui/contact';

const pageTitle = "Contact Lawns All Day - Get Your Free Quote Today";
const pageDescription = "Contact Lawns All Day for professional lawn care services in Treasure Valley. Call (208) 989-8378 or email info@lawnsallday.com for a free quote.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Hero 
    title="Contact Us"
    subtitle="Get Your Free Lawn Care Quote Today"
  />
  
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold text-foreground mb-8">Get in Touch</h2>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-start">
              <div class="bg-muted rounded-full p-3 mr-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-foreground mb-1">Phone</h3>
                <a href="tel:+12089898378" class="text-lg text-primary hover:text-primary/80">
                  (208) 989-8378
                </a>
                <p class="text-muted-foreground text-sm mt-1">Mon-Sat: 7:00 AM - 7:00 PM</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-muted rounded-full p-3 mr-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-foreground mb-1">Email</h3>
                <a href="mailto:info@lawnsallday.com" class="text-lg text-primary hover:text-primary/80">
                  Brad@lawnsallday.com
                </a>
                <p class="text-muted-foreground text-sm mt-1">We respond within 24 hours</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-muted rounded-full p-3 mr-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-foreground mb-1">Service Area</h3>
                <p class="text-foreground">Treasure Valley, Idaho</p>
                <p class="text-muted-foreground text-sm mt-1">Including Boise, Meridian, Eagle, Nampa, and surrounding areas</p>
              </div>
            </div>
          </div>

          <div class="bg-muted rounded-xl p-6">
            <h3 class="text-xl font-semibold text-foreground mb-4">Why Choose Lawns All Day?</h3>
            <ul class="space-y-2">
              <li class="flex items-center text-muted-foreground">
                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Free estimates on all services
              </li>
              <li class="flex items-center text-muted-foreground">
                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Licensed and insured professionals
              </li>
              <li class="flex items-center text-muted-foreground">
                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                100% satisfaction guarantee
              </li>
              <li class="flex items-center text-muted-foreground">
                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Same-week service available
              </li>
            </ul>
          </div>
        </div>

        <!-- Contact Form -->
        <Contact />
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="py-16 bg-muted">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-foreground mb-4">
        Service Areas
      </h2>
      <p class="text-muted-foreground text-center mb-8">
        We proudly serve the following areas:
      </p>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <div class="bg-background rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold text-foreground mb-2">Boise</h3>
          <p class="text-muted-foreground">City Center</p>
        </div>
        <div class="bg-background rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold text-foreground mb-2">Meridian</h3>
          <p class="text-muted-foreground">All Areas</p>
        </div>
        <div class="bg-background rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold text-foreground mb-2">Nampa</h3>
          <p class="text-muted-foreground">All Areas</p>
        </div>
        <div class="bg-background rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold text-foreground mb-2">Eagle</h3>
          <p class="text-muted-foreground">All Areas</p>
        </div>
        <div class="bg-background rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold text-foreground mb-2">Kuna</h3>
          <p class="text-muted-foreground">All Areas</p>
        </div>
        <div class="bg-background rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold text-foreground mb-2">Caldwell</h3>
          <p class="text-muted-foreground">All Areas</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
        <form name="contact" method="POST" data-netlify="true" data-netlify-honeypot="bot-field" class="space-y-4">
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>
          
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            />
          </div>
          
          <div>
            <label for="service" class="block text-sm font-medium text-gray-700 mb-1">Service Needed</label>
            <select
              id="service"
              name="service"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            >
              <option value="">Select a service</option>
              <option value="lawn-mowing">Lawn Mowing</option>
              <option value="landscaping">Landscaping</option>
              <option value="tree-trimming">Tree Trimming</option>
              <option value="sprinkler-repair">Sprinkler Repair</option>
              <option value="fertilization">Fertilization</option>
              <option value="weed-control">Weed Control</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
              placeholder="Tell us about your lawn care needs..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full bg-green-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-green-700 transition-colors"
          >
            Get Free Quote
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="py-16 px-4 md:px-6 lg:px-8 max-w-7xl mx-auto bg-gray-50">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-4">
      Proudly Serving the Treasure Valley
    </h2>
    <p class="text-xl text-center text-gray-700 mb-12 max-w-3xl mx-auto">
      We provide professional lawn care services throughout the Treasure Valley, 
      including these communities:
    </p>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
      <a href="/boise" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Boise</h3>
      </a>
      <a href="/meridian" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Meridian</h3>
      </a>
      <a href="/eagle" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Eagle</h3>
      </a>
      <a href="/nampa" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Nampa</h3>
      </a>
      <a href="/caldwell" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Caldwell</h3>
      </a>
      <a href="/star" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Star</h3>
      </a>
      <a href="/middleton" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Middleton</h3>
      </a>
      <a href="/kuna" class="text-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-semibold text-gray-900 hover:text-green-600">Kuna</h3>
      </a>
    </div>
  </section>
</BaseLayout>
