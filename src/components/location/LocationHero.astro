---
export interface Props {
  location: string;
  heroImage?: string;
  population?: string;
  established?: string;
}

const { location, heroImage, population, established } = Astro.props;
---

<section class="relative h-[70vh] min-h-[600px] flex items-center justify-center">
  {/* Background Image or Gradient */}
  <div class="absolute inset-0">
    {heroImage ? (
      <img 
        src={heroImage} 
        alt={`${location} landscape`}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-green-600 via-green-700 to-green-800"></div>
    )}
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  </div>
  
  {/* Content */}
  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <h1 class="text-5xl md:text-7xl font-bold mb-6 drop-shadow-lg">
      Lawn Care Services in {location}
    </h1>
    
    <p class="text-xl md:text-2xl mb-8 drop-shadow max-w-3xl mx-auto">
      Professional lawn care and landscaping services throughout {location} and surrounding areas
    </p>
    
    {/* Quick Stats */}
    {(population || established) && (
      <div class="flex justify-center gap-8 mb-8 text-sm opacity-90">
        {population && (
          <div>
            <span class="font-bold">Population:</span> {population}
          </div>
        )}
        {established && (
          <div>
            <span class="font-bold">Serving Since:</span> {established}
          </div>
        )}
      </div>
    )}
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="/quote" 
        class="bg-white text-green-700 hover:bg-green-50 font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl text-lg"
      >
        Get Your Free {location} Quote
      </a>
      <a 
        href="tel:+12089898378" 
        class="bg-green-700 bg-opacity-90 hover:bg-opacity-100 text-white font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl flex items-center justify-center gap-2 text-lg"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call (208) 989-8378
      </a>
    </div>
  </div>
</section>