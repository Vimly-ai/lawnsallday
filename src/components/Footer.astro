---
const currentYear = new Date().getFullYear();

const services = [
  'Lawn Mowing',
  'Fertilization',
  'Weed Control',
  'Landscaping',
  'Sprinkler Repair',
  'Tree Trimming'
];

const locations = [
  'Nampa',
  'Meridian',
  'Boise',
  'Eagle',
  'Kuna',
  'Caldwell'
];
---

<footer class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-bold mb-4">Lawns All Day</h3>
        <p class="text-gray-400 mb-4">
          Professional lawn care and landscaping services throughout the Treasure Valley.
        </p>
        <a 
          href="tel:12089898378" 
          class="text-lawn-green-400 hover:text-lawn-green-300 font-semibold"
        >
          (208) 989-8378
        </a>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Our Services</h4>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <a 
                href={`/services/${service.toLowerCase().replace(/\s+/g, '-')}`}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {service}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Service Areas -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Service Areas</h4>
        <ul class="space-y-2">
          {locations.map((location) => (
            <li>
              <a 
                href={`/locations/${location.toLowerCase()}`}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {location}, Idaho
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
        <address class="text-gray-400 not-italic">
          6424 E Sherryanna Ln<br />
          Nampa, ID 83687<br />
          <a 
            href="mailto:Brad@lawnsallday.com" 
            class="hover:text-white transition-colors"
          >
            Brad@lawnsallday.com
          </a>
        </address>
      </div>
    </div>
    
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {currentYear} Lawns All Day. All rights reserved.</p>
    </div>
  </div>
</footer>