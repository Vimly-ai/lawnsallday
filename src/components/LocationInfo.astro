---
export interface Props {
  location: string;
}

const { location } = Astro.props;

const locationInfo = {
  'Nampa': {
    description: 'As Idaho\'s third-largest city, Nampa offers a perfect blend of suburban comfort and agricultural heritage.',
    neighborhoods: ['Downtown Nampa', 'Lake Lowell', 'Sunny Ridge', 'Columbia Village']
  },
  'Meridian': {
    description: 'Meridian is one of the fastest-growing cities in Idaho, known for its family-friendly neighborhoods and parks.',
    neighborhoods: ['The Village', 'Lochsa Falls', 'Paramount', 'Century Farm']
  },
  'Boise': {
    description: 'Idaho\'s capital city combines urban amenities with easy access to outdoor recreation.',
    neighborhoods: ['North End', 'East End', 'Southeast Boise', 'Bench']
  },
  'Eagle': {
    description: 'Eagle maintains its small-town charm while offering upscale residential communities.',
    neighborhoods: ['Eagle Hills', 'Legacy', 'Floating Feather', 'The Ridge']
  },
  'Kuna': {
    description: 'Kuna preserves its agricultural roots while welcoming new residential development.',
    neighborhoods: ['Downtown Kuna', 'Crimson Point', 'Patagonia', 'Sagewind']
  },
  'Caldwell': {
    description: 'Caldwell offers affordable living with a strong sense of community.',
    neighborhoods: ['Downtown Caldwell', 'Skyway', 'Autumn Wind', 'College Park']
  }
};

const cityName = location.split(',')[0].trim();
const info = locationInfo[cityName] || { description: '', neighborhoods: [] };
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
        About {cityName}
      </h2>
      <p class="text-lg text-gray-700 mb-8">
        {info.description} Our lawn care services are tailored to meet the unique 
        needs of {cityName} properties, considering local climate conditions and HOA requirements.
      </p>
      
      {info.neighborhoods.length > 0 && (
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            Neighborhoods We Serve
          </h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {info.neighborhoods.map((neighborhood) => (
              <div class="bg-white p-4 rounded text-center">
                <span class="text-gray-700">{neighborhood}</span>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>