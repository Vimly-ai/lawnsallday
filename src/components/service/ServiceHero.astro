---
export interface Props {
  title: string;
  subtitle: string;
  image?: string;
  location?: string;
}

const { title, subtitle, image, location } = Astro.props;
---

<section class="relative h-[60vh] min-h-[500px] flex items-center justify-center bg-gradient-to-br from-green-600 to-green-800">
  {image ? (
    <div class="absolute inset-0">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-green-900/70 to-green-700/50"></div>
    </div>
  ) : (
    <div class="absolute inset-0 bg-gradient-to-br from-green-600 to-green-800"></div>
  )}
  
  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <h1 class="text-4xl md:text-6xl font-bold mb-4 drop-shadow-lg">
      {title}
    </h1>
    <p class="text-xl md:text-2xl mb-8 drop-shadow max-w-3xl mx-auto">
      {subtitle}
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="/quote" 
        class="bg-white text-green-700 hover:bg-green-50 font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl"
      >
        Get Free Quote
      </a>
      <a 
        href="tel:+12089898378" 
        class="bg-green-700 text-white hover:bg-green-800 font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        (208) 989-8378
      </a>
    </div>
    
    {location && (
      <p class="mt-6 text-lg opacity-90">
        Serving {location} and surrounding areas
      </p>
    )}
  </div>
</section>