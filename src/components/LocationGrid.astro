---
export interface Props {
  locations: Array<{
    name: string;
    slug: string;
    description: string;
  }>;
  service: string;
}

const { locations, service } = Astro.props;
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
  {locations.map((location) => (
    <a 
      href={`/${location.slug}`}
      class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group"
    >
      <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-green-600 transition-colors">
        {location.name}
      </h3>
      <p class="text-gray-600 mb-4">{location.description}</p>
      <span class="text-green-600 font-semibold inline-flex items-center">
        View Services
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </span>
    </a>
  ))}
</div>