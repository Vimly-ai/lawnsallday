---
export interface Props {
  locations: Array<{ name: string; slug: string }>;
}

const { locations } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
        Service Locations
      </h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
        {locations.map((location) => (
          <a 
            href={`/locations/${location.slug}`}
            class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow group text-center"
          >
            <h3 class="text-xl font-semibold text-gray-900 group-hover:text-lawn-green-600 transition-colors">
              {location.name}
            </h3>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>