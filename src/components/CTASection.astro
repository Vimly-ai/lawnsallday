---
export interface Props {
  title?: string;
  subtitle?: string;
  primaryButton?: {
    text: string;
    href: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
  };
  bgColor?: string;
}

const { 
  title = "Ready to Transform Your Lawn?",
  subtitle = "Get started with a free quote today!",
  primaryButton = { text: "Get Free Quote", href: "/quote" },
  secondaryButton = { text: "Call (208) 989-8378", href: "tel:+12089898378" },
  bgColor = "from-green-600 to-green-700"
} = Astro.props;
---

<section class={`py-16 bg-gradient-to-r ${bgColor} text-white`}>
  <div class="container-custom text-center">
    <h2 class="text-3xl md:text-5xl font-bold mb-4">
      {title}
    </h2>
    
    <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
      {subtitle}
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href={primaryButton.href}
        class="bg-white text-green-700 hover:bg-gray-100 font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl"
      >
        {primaryButton.text}
      </a>
      
      <a 
        href={secondaryButton.href}
        class="bg-green-800 bg-opacity-50 hover:bg-opacity-70 text-white font-bold py-4 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
      >
        {secondaryButton.href.startsWith('tel:') && (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        )}
        {secondaryButton.text}
      </a>
    </div>
    
    <p class="mt-8 text-sm opacity-75">
      Licensed • Insured • Family Owned • Serving Idaho Since 2015
    </p>
  </div>
</section>