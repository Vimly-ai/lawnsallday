---
export interface Props {
  service: string;
  location: string;
}

const { service, location } = Astro.props;
---

<section class="bg-green-600 py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-bold text-white mb-6">
      Ready for Professional {service} in {location}?
    </h2>
    <p class="text-xl text-green-100 mb-8">
      Get your free, no-obligation quote today and join hundreds of satisfied customers.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="tel:+12089898378" 
        class="inline-flex items-center px-8 py-4 bg-white text-green-600 font-semibold rounded-lg hover:bg-green-50 transition-colors duration-300"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
        </svg>
        Call (208) 989-8378
      </a>
      <a 
        href="/contact" 
        class="inline-flex items-center px-8 py-4 bg-green-700 text-white font-semibold rounded-lg hover:bg-green-800 transition-colors duration-300"
      >
        Get Free Quote
      </a>
    </div>
  </div>
</section>