---
interface Props {
  title: string;
  children: any;
}

const { title, children } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Lawn care services" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/theme.css" />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <nav class="border-b">
      <div class="container flex h-16 items-center">
        <div class="flex flex-1 items-center justify-between">
          <a href="/" class="flex items-center space-x-2">
            <span class="text-2xl font-bold">Lawns All Day</span>
          </a>
          <div class="flex items-center space-x-4">
            <a href="/services" class="text-sm font-medium transition-colors hover:text-primary">Services</a>
            <a href="/about" class="text-sm font-medium transition-colors hover:text-primary">About</a>
            <a href="/contact" class="text-sm font-medium transition-colors hover:text-primary">Contact</a>
            <ThemeToggle class="ml-4" />
          </div>
        </div>
      </div>
    </nav>
    <main class="container mx-auto py-12">
      {children}
    </main>
    <footer class="border-t">
      <div class="container flex flex-col items-center justify-between py-8 md:flex-row">
        <p class="text-sm text-muted-foreground">Â© {new Date().getFullYear()} Lawns All Day. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
