---
export interface Props {
  service: string;
  location: string;
  intro: string;
}

const { service, location, intro } = Astro.props;
---

<section class="bg-lawn-green-50 py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <nav class="text-sm mb-4">
        <a href="/" class="text-lawn-green-600 hover:text-lawn-green-700">Home</a>
        <span class="mx-2 text-gray-500">/</span>
        <a href="/locations/${location.toLowerCase().replace(/,.*/, '').trim().replace(/\s+/g, '-')}" class="text-lawn-green-600 hover:text-lawn-green-700">{location}</a>
        <span class="mx-2 text-gray-500">/</span>
        <span class="text-gray-700">{service}</span>
      </nav>
      
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        {service} in {location}
      </h1>
      
      <p class="text-lg text-gray-700 leading-relaxed">
        {intro}
      </p>
      
      <div class="mt-8 flex flex-col sm:flex-row gap-4">
        <a 
          href="tel:12089898378" 
          class="bg-lawn-green-600 text-white px-8 py-3 rounded-full font-semibold text-center hover:bg-lawn-green-700 transition-colors shadow-lg"
        >
          Get Free Quote
        </a>
        <a 
          href="#contact-form" 
          class="border-2 border-lawn-green-600 text-lawn-green-600 px-8 py-3 rounded-full font-semibold text-center hover:bg-lawn-green-50 transition-colors"
        >
          Schedule Service
        </a>
      </div>
    </div>
  </div>
</section>