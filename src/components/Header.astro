<header class="bg-white shadow-lg sticky top-0 z-50">
  <div class="container-custom">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <img src="/images/lawns-all-day-logo.png" alt="Lawns All Day Logo" class="h-12 w-auto" />
          <div class="hidden sm:block">
            <h1 class="text-2xl font-bold text-primary-600">Lawns All Day</h1>
            <p class="text-sm text-gray-600">Treasure Valley Lawn Care</p>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Home</a>
        
        <!-- Services Dropdown -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-primary-600 font-medium transition-colors flex items-center">
            Services
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="absolute left-0 mt-2 w-64 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href="/services/lawn-mowing" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Lawn Mowing & Edging</a>
              <a href="/services/landscaping" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Full Landscaping</a>
              <a href="/services/sprinkler-repair" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Sprinkler Repair</a>
              <a href="/services/fertilization" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Fertilization & Weed Control</a>
              <a href="/services/mulch-delivery" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Mulch & Bark Delivery</a>
              <a href="/services/tree-trimming" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Tree & Bush Trimming</a>
              <a href="/services" class="block px-4 py-2 text-sm font-semibold text-primary-600 border-t border-gray-100 mt-2">View All Services â†’</a>
            </div>
          </div>
        </div>

        <!-- Locations Dropdown -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-primary-600 font-medium transition-colors flex items-center">
            Service Areas
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href="/locations/nampa-idaho" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Nampa</a>
              <a href="/locations/boise-idaho" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Boise</a>
              <a href="/locations/meridian-idaho" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Meridian</a>
              <a href="/locations/eagle-idaho" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Eagle</a>
              <a href="/locations/kuna-idaho" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Kuna</a>
              <a href="/locations/caldwell-idaho" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600">Caldwell</a>
            </div>
          </div>
        </div>

        <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">About</a>
        <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Contact</a>
      </nav>

      <!-- CTA Buttons -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="tel:+12089898378" class="text-primary-600 hover:text-primary-700 font-semibold text-lg">
          (208) 989-8378
        </a>
        <a href="/quote" class="btn-primary">
          Get Free Quote
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="lg:hidden p-2" id="mobile-menu-button">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="py-4 border-t border-gray-200">
        <a href="/" class="block py-2 text-gray-700 hover:text-primary-600">Home</a>
        <a href="/services" class="block py-2 text-gray-700 hover:text-primary-600">Services</a>
        <a href="/locations" class="block py-2 text-gray-700 hover:text-primary-600">Service Areas</a>
        <a href="/about" class="block py-2 text-gray-700 hover:text-primary-600">About</a>
        <a href="/contact" class="block py-2 text-gray-700 hover:text-primary-600">Contact</a>
        <div class="pt-4 border-t border-gray-200 mt-4">
          <a href="tel:+12089898378" class="block py-2 text-primary-600 font-semibold text-lg">
            (208) 989-8378
          </a>
          <a href="/quote" class="btn-primary inline-block mt-2">
            Get Free Quote
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    button?.addEventListener('click', function() {
      menu?.classList.toggle('hidden');
    });
  });
</script>
