---
export interface Props {
  services: Array<{ name: string; slug: string }>;
  location: string;
}

const { services, location } = Astro.props;
---

<section id="services" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
        Available Services in {location}
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service) => (
          <a 
            href={`/${service.slug}`}
            class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow group"
          >
            <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-lawn-green-600 transition-colors">
              {service.name}
            </h3>
            <p class="text-gray-600 mb-4">
              Professional {service.name.toLowerCase()} services tailored for {location} properties.
            </p>
            <span class="inline-flex items-center text-lawn-green-600 font-medium">
              Learn more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </a>
        ))}
      </div>
      
      <div class="mt-12 bg-lawn-green-50 p-8 rounded-lg text-center">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">
          Can't Find What You're Looking For?
        </h3>
        <p class="text-gray-700 mb-6">
          We offer custom lawn care solutions for {location} properties. 
          Contact us to discuss your specific needs.
        </p>
        <a 
          href="tel:12089898378" 
          class="bg-lawn-green-600 text-white px-8 py-3 rounded-full font-semibold hover:bg-lawn-green-700 transition-colors shadow-lg inline-block"
        >
          Call for Custom Quote
        </a>
      </div>
    </div>
  </div>
</section>