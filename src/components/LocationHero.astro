---
export interface Props {
  location: string;
}

const { location } = Astro.props;
---

<section class="bg-lawn-green-50 py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <nav class="text-sm mb-4">
        <a href="/" class="text-lawn-green-600 hover:text-lawn-green-700">Home</a>
        <span class="mx-2 text-gray-500">/</span>
        <a href="/locations" class="text-lawn-green-600 hover:text-lawn-green-700">Locations</a>
        <span class="mx-2 text-gray-500">/</span>
        <span class="text-gray-700">{location}</span>
      </nav>
      
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Lawn Care Services in {location}
      </h1>
      
      <p class="text-lg text-gray-700 leading-relaxed mb-8">
        Professional lawn care and landscaping services for residential and commercial 
        properties in {location}. Our experienced team provides reliable, high-quality 
        service with attention to detail that sets us apart.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="tel:12089898378" 
          class="bg-lawn-green-600 text-white px-8 py-3 rounded-full font-semibold hover:bg-lawn-green-700 transition-colors shadow-lg"
        >
          Get Free Quote
        </a>
        <a 
          href="#services" 
          class="border-2 border-lawn-green-600 text-lawn-green-600 px-8 py-3 rounded-full font-semibold hover:bg-lawn-green-50 transition-colors"
        >
          View Services
        </a>
      </div>
    </div>
  </div>
</section>