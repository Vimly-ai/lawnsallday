---
import Card from '../components/ui/card';
import Button from '../components/ui/button';

const locations = [
  { name: 'Nampa', population: '100,000+', link: '/locations/nampa' },
  { name: 'Meridian', population: '120,000+', link: '/locations/meridian' },
  { name: 'Boise', population: '235,000+', link: '/locations/boise' },
  { name: 'Eagle', population: '30,000+', link: '/locations/eagle' },
  { name: 'Kuna', population: '24,000+', link: '/locations/kuna' },
  { name: 'Caldwell', population: '60,000+', link: '/locations/caldwell' }
];
---

<section class="py-16 bg-background/50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
        Serving the Entire Treasure Valley
      </h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Professional lawn care services available throughout Idaho's premier communities
      </p>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
      {locations.map((location) => (
        <Card class="p-6 text-center hover:shadow-lg transition-shadow group">
          <h3 class="text-xl font-semibold text-foreground group-hover:text-primary transition-colors">
            {location.name}
          </h3>
          <p class="text-muted-foreground text-sm mt-1">Pop. {location.population}</p>
        </Card>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <p class="text-muted-foreground mb-4">
        Don't see your area? We serve all of Canyon and Ada counties!
      </p>
      <Button variant="outline" href="/contact" class="w-full justify-center">
        Contact Us
      </Button>
    </div>
  </div>
</section>