---
export interface Props {
  links: Array<{
    url: string;
    text: string;
    type: string;
  }>;
}

const { links } = Astro.props;
---

<section class="mb-16">
  <h3 class="text-2xl font-bold text-gray-900 mb-6">Related Services & Areas</h3>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {links.map((link) => (
      <a 
        href={link.url}
        class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300"
      >
        <h4 class="font-semibold text-gray-900 mb-2">{link.text}</h4>
        <span class="text-sm text-green-600">Learn More â†’</span>
      </a>
    ))}
  </div>
</section>